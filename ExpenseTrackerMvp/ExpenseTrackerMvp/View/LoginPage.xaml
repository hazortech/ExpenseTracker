<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTrackerMvp.View.LoginPage">

  <StackLayout VerticalOptions="CenterAndExpand">

    <Label HorizontalTextAlignment="Center" FontSize="18" FontAttributes="Bold">Expense Tracker</Label>
    <BoxView HeightRequest="50" />


    <Entry x:Name="EntryUser" Placeholder="Username" Text=""  />
    <Entry x:Name="EntryPass" Placeholder="Password" Text="" IsPassword="true" />

    <Button Text="Login" Clicked="OnLoginButtonClicked"></Button>
    
  </StackLayout>

</ContentPage>