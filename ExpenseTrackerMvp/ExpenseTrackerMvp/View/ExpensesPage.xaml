<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTrackerMvp.View.ExpensesPage">

  <StackLayout Spacing="10" Padding="10">

    <Label Text="Expenses" FontSize="18" FontAttributes="Bold" />

    <ListView ItemsSource="{Binding ExpenseCollection}">      <!-- ObservableCollection viewmodel-->
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <Grid>               
              <Label Text="{Binding Description}" FontAttributes="Bold" />
              <Label Grid.Column="1" Text="{Binding Value}" />              
            </Grid>
          </ViewCell>
        </DataTemplate>        
      </ListView.ItemTemplate>
    </ListView>

    <Button Command="{Binding CreateCommand}" Text="Create New"></Button>
    <Button Command="{Binding LoadCommand}" Text="Refresh"></Button>

  </StackLayout>
  
</ContentPage>