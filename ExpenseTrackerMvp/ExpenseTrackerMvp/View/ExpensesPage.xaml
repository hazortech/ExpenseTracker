<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTrackerMvp.View.ExpensesPage">

  <StackLayout>

    <Button Command="{Binding CarregarCommand}" Text="Carregar"></Button>

    <ListView ItemsSource="{Binding ExpenseCollection}">      <!-- Observable collection da viewmodel-->
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Description}"></TextCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>

    
    
  </StackLayout>
  
</ContentPage>