<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTrackerMvp.View.PreferencesPage"
             Title="Preferences">
    
    <ContentPage.Content>
        
        <StackLayout VerticalOptions="CenterAndExpand">

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">                    
                <Label Text="Show puppy when a new expense is added" VerticalOptions="Center" />
                <Switch IsToggled="{Binding ShowPuppyPref}" />                                
            </StackLayout>


            <Button Command="{Binding SavePreferencesCommand}" Text="Save Preferences"></Button>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>