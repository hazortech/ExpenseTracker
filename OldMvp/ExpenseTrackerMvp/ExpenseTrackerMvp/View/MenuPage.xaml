<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTrackerMvp.View.MenuPage"
             Title="Menu"
             BackgroundColor="#e8e8e8">
  
  <StackLayout Padding="20">

    <ListView x:Name="ListViewMenu">
      <ListView.Header>
        <Label Text="Expense Tracker" HorizontalTextAlignment="Center"></Label>        
      </ListView.Header>
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Padding="10" Spacing="15" Orientation="Horizontal">              
              <Label Text="{Binding MenuTitle}" FontSize="12" VerticalOptions="Center"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>      
    </ListView>
    
  </StackLayout>
  
</ContentPage>