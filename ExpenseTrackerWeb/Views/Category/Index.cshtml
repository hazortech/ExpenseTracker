@model System.Collections.Generic.IEnumerable<ExpenseTrackerDomain.Models.Category>

@{
    ViewBag.Title = "Categories";
}
  
<h2>Your Categories</h2>


<table class="table table-striped">

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Category", new { id = item.Id }, new object { }) |
                    @Html.ActionLink("Delete", "Delete", "Category", new { id = item.Id }, new object { })
                </td>
            </tr>
        }
    }

</table>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
